<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1.5"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_index" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1.5"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_direction" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="3"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_ID" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="2"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_frametype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_frame_type" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="3"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_frame_formate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_frame_formate" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1.5"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_datalen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_data_len" />
    </RelativeLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="5"
        android:gravity="center" >

        <TextView
            android:id="@+id/can_data_list_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_list_title_data" />
    </RelativeLayout>

</LinearLayout>