<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">
    <!--水平的线性布局-->
    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1">

        <TextView
            style="@style/MytextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/can_device"
            android:textColor="@color/black_deep"
             />

        <Spinner
			android:id="@+id/can_device"
            android:layout_width="120dp"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>


    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/led_toggle_off_text" />

        <com.aplex.webcan.flatui.view.FlatToggleButton
            android:id="@+id/toggle"
            android:layout_width="100dp"
            android:layout_height="40dp" />

        <TextView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="@string/led_toggle_on_text" />


    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />


    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1">


        <com.aplex.webcan.flatui.view.FlatButton
            style="@style/MytextSize"
            android:text="@string/CAN0_Setup"
            android:id="@+id/CAN0_Setting"
            android:layout_width="100dp"
            android:layout_height="40dp"
            />

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider_list" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1">


        <com.aplex.webcan.flatui.view.FlatButton
            style="@style/MytextSize"
            android:text="@string/CAN1_Setup"
            android:id="@+id/CAN1_Setting"
            android:layout_width="100dp"
            android:layout_height="40dp"/>

    </LinearLayout>

</LinearLayout>
